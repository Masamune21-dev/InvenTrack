# Port server (default: 3000)
PORT=3000

# JWT Secret - WAJIB DIGANTI untuk production!
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=GANTI-DENGAN-SECRET-ANDA-YANG-PANJANG-DAN-ACAK

# JWT Expiry (default: 24h)
JWT_EXPIRES=24h

# ============================================
# Database Config (hanya untuk MariaDB/MySQL)
# ============================================
# Untuk menggunakan MariaDB/MySQL:
# 1. Install dependency: npm install mysql2
# 2. Ubah require di server.js:
#    SEBELUM: require('./backend/db')
#    SESUDAH: require('./backend/db-mysql')
# 3. Isi config di bawah ini:
#
# DB_HOST=localhost
# DB_PORT=3306
# DB_USER=inventrack
# DB_PASSWORD=password_anda
# DB_NAME=inventrack
